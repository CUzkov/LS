{
    "references": [{ "path": "../../api-types" }],
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ESNext",
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"allowJs": true,
		"baseUrl": "./",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"downlevelIteration": true,
		"strictNullChecks": true,
		"paths": {
			"*": ["./src/*"],
			"components/*": [
				"src/components/*"
			],
			"small-components/*": [
				"src/small-components/*"
			],
			"ajax/*": [
				"src/ajax/*"
			],
			"actions/*": [
				"src/actions/*"
			],
			"pages/*": [
				"src/pages/*"
			],
			"hooks/*": [
				"src/hooks/*"
			],
			"constants/*": [
				"src/constants/*"
			],
			"store/*": [
				"src/store/*"
			],
			"utils/*": [
				"src/utils/*"
			],
			"types/*": [
				"src/types/*"
			],
			"@api-types/*": ["../../api-types/*"]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable"
		],
		"sourceMap": true,
		"noImplicitAny": false,
	},
	"exclude": ["node_modules", "build"],
	"include": [
		"./src",
		"webpack.config.ts",
		"custom.d.ts"
	]
}
